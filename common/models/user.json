{
  "name": "user",
  "plural": "user",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "relations": {
    "accessTokens": {
      "type": "hasMany",
      "model": "accessToken",
      "foreignKey": "userId"
    },
    "identities": {
      "type": "hasMany",
      "model": "userIdentity",
      "foreignKey": "userId"
    },
    "credentials": {
      "type": "hasMany",
      "model": "userCredential",
      "foreignKey": "userId"
    },
    "userInfo": {
      "type": "hasMany",
      "model": "userInfo",
      "foreignKey": "userId"
    }
  },
  "validations": [],
  "acls": [
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "addNew"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    }
  ],
  "methods": {
    "addNew": {
      "accepts": [
        {
          "arg": "user",
          "type": "object",
          "required": true,
          "description": "User object",
          "http": {
            "source": "body"
          }
        }
      ],
      "returns": [
        {
          "arg": "user",
          "type": "object",
          "root": true,
          "description": "User's data with generated id"
        }
      ],
      "description": "Add new user",
      "http": [
        {
          "path": "/addNew",
          "verb": "post"
        }
      ]
    } 
  }
}